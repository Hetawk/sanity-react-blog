{
  "version": 2,
  "builds": [
    { "src": "src/**", "use": "@vercel/node" },
    { "src": "backend_sanity/**", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/src/(.*)",
      "dest": "/src/$1"
    },
    {
      "src": "/backend_sanity/(.*)",
      "dest": "/backend_sanity/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ]
}
